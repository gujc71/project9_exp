<!doctype html>
<html lang="ko">
  <head>
      <% include ../common/htmlHead.ejs %>
      <link rel="stylesheet" type="text/css" href="/stylesheets/dialog-polyfill.css" />
      <script src="/javascripts/dialog-polyfill.js"></script>
    <style>
        .userphoto {
          width:  100px;
          height: 100px;
        }
    </style>   
    
    <script>
      var snackbarMsg = null;

      window.onload = function () {
        snackbarMsg = document.querySelector('#snackbarMsg');
      }

      // Save
      function formSubmit(){
        if ($("#userid").val().trim()==="") {
          snackbarMsg.MaterialSnackbar.showSnackbar({message: 'input your ID.',timeout: 2000});        
          return;
        }
        if ($("#userpw").val().trim()==="") {
          snackbarMsg.MaterialSnackbar.showSnackbar({message: 'input your password.',timeout: 2000});        
          return;
        }
        if ($("#usernm").val().trim()==="") {
          snackbarMsg.MaterialSnackbar.showSnackbar({message: 'input your name.',timeout: 2000});        
          return;
        }
        if ($("#usermail").val().trim()==="") {
          snackbarMsg.MaterialSnackbar.showSnackbar({message: 'input your email.',timeout: 2000});        
          return;
        }
        if (!confirm("Would you like to sign up?")) {
          return;
        }        
        $("#inputForm").submit();        
      }
    </script>   
  </head>
  <body>
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
        <% include ../common/header_menu.ejs %>

      <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid demo-content mdl-color--white mdl-shadow--2dp">
            <div class="mdl-cell mdl-cell--4-col">
              <form action="joinFormSave" id="inputForm" method="post">
                <div class="mdl-card__title">
                    <h2 class="mdl-card__title-text">Sign Up</h2>
                </div>          
                  <ul class="demo-list-item mdl-list">
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content width100">ID</span>
                  <input class="mdl-textfield__input" type="text" id="userid" name="userid" maxlength="20">
                </li>
                <li class="mdl-list__item">
                    <span class="mdl-list__item-primary-content width100">Password</span>
                    <input class="mdl-textfield__input" type="password" id="userpw" name="userpw" maxlength="20">
                </li>
                <li class="mdl-list__item">
                    <span class="mdl-list__item-primary-content width100">Name</span>
                    <input class="mdl-textfield__input" type="text" id="usernm" name="usernm" maxlength="20">
                </li>
                <li class="mdl-list__item">
                  <span class="mdl-list__item-primary-content width100">Email</span>
                  <input class="mdl-textfield__input" type="text" id="usermail" name="usermail"  maxlength="50">
                </li>
              </ul>
            </form>  
            <div class="mdl-card__actions mdl-card--border">
                <a class="mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect" onclick="formSubmit()"> Sign Up</a>
            </div>
          </div>
          <div class="mdl-cell mdl-cell--4-col">
              <a class="mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect" href="/auth/google">  Sign Up with Google</a><br/>
              <a class="mdl-button mdl-button--raised mdl-button--colored mdl-js-button mdl-js-ripple-effect" style="margin-top:10px" href="/auth/facebook"> Sign Up with Facebook</a>
            </div>
        </div>
      </main>
    </div>

    <div id="snackbarMsg" class="mdl-js-snackbar mdl-snackbar">
      <div class="mdl-snackbar__text"></div>
      <button class="mdl-snackbar__action" type="button"></button>
  </div>     
  </body>
</html>
