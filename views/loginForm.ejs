<!doctype html>
<html lang="ko">
  <head>
    <% include ./common/hemlHead.ejs %>
    <style>
      .demo-card-wide.mdl-card {
        width: 512px;
      }
      .demo-card-wide > .mdl-card__title {
        color: #fff;
        height: 176px;
        background: url('/images/welcome_card.jpg') center / cover;
      }
      .demo-card-wide > .mdl-card__menu {
        color: #fff;
      }
    </style>
    <script>
      function formSubmit(){
        var snackbarLogin = document.querySelector('#snackbarLogin');
        if ($("#uid").val()==="") {
          snackbarLogin.MaterialSnackbar.showSnackbar({message: 'Please enter your ID.',timeout: 2000});        
          return;
        }
        if ($("#passwd").val()==="") {
          snackbarLogin.MaterialSnackbar.showSnackbar({message: 'Please enter a password.',timeout: 2000});        
          return;
        }
        $("#inputForm").submit();
      }
    </script>
  </head>
  <body>
      <div class="demo-layout mdl-layout mdl-layout--fixed-header mdl-js-layout mdl-color--grey-100">
          <div class="demo-ribbon"></div>
          <main class="demo-main mdl-layout__content">
            <div class="demo-container mdl-grid">
              <div class="mdl-cell mdl-cell--4-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
                <div class="demo-container mdl-grid mdl-cell  mdl-cell--4-col">
                    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
                      <div class="mdl-card__title">
                        <h2 class="mdl-card__title-text">Welcome</h2>
                      </div>
                      <div class="mdl-card__supporting-text">
                        <form action="users/loginChk" id="inputForm" >
                            <div class="mdl-textfield mdl-js-textfield">
                              <input class="mdl-textfield__input" type="text" id="uid" name="uid">
                              <label class="mdl-textfield__label" for="uid">ID</label>
                            </div>
                            <div class="mdl-textfield mdl-js-textfield">
                              <input class="mdl-textfield__input" type="password" id="passwd" name="passwd">
                              <label class="mdl-textfield__label" for="passwd">Password</label>
                            </div>
                        </form>                        
                      </div>
                      <div class="mdl-card__actions mdl-card--border">
                        <button class="mdl-button mdl-js-button" onclick="formSubmit()">Login</button>
                      </div>
                    </div>
                </div>                 
            </div>
          </main>
        </div>
        <div id="snackbarLogin" class="mdl-js-snackbar mdl-snackbar">
            <div class="mdl-snackbar__text"></div>
            <button class="mdl-snackbar__action" type="button"></button>
        </div>        
  </body>
</html>
