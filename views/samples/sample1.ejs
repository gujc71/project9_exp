<!doctype html>
<html lang="ko">
  <head>
      <% include ../common/htmlHead.ejs %>
      <script src="/javascripts/datepicker.min.js"></script>
      <script src="/javascripts/datepicker.en.js"></script>
      <link rel="stylesheet" href="/stylesheets/datepicker.min.css" media="all" />      
    
    <script>

      window.onload = function () {
        var startdate = $('#startdate').datepicker({
							autoClose: true,
				}).data('datepicker');
        startdate.selectDate(new Date("<%=startdate%>"));   
        
        var enddate = $('#enddate').datepicker({
							autoClose: true,
				}).data('datepicker');
				enddate.selectDate(new Date("<%=enddate%>"));          
      }

    </script>   
  </head>
  <body>
    <div class="demo-layout mdl-layout mdl-js-layout mdl-layout--fixed-drawer mdl-layout--fixed-header">
        <% include ../common/header_menu.ejs %>

      <main class="mdl-layout__content mdl-color--grey-100">
        <div class="mdl-grid demo-content mdl-color--white mdl-shadow--2dp">
          <div style="padding: 10px; margin-left: 50px;" class="mdl-card__supporting-text">
            <h2 class="mdl-card__title-text" style="margin-bottom: 20px;">Calendar</h2>

            <form id="inputForm" method="GET">
              Term<input class="datepicker-here" id="startdate" name="startdate" data-language='en' style="width:85px; margin-left:10px; text-align: center;" readonly/>
              - <input class="datepicker-here" id="enddate" name="enddate" data-language='en' style="width:85px; margin-left:10px; text-align: center;" readonly/>
              <button type="button" class="mdl-button mdl-js-button" onclick="inputForm.submit()">
                <i class="mdl-color-text--blue-grey-400 material-icons" role="presentation">search</i>
              </button>
            </form>
          </div>            
        </div>
      </main>
    </div>

  </body>
</html>
